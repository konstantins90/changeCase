{
   "manifest_version": 2,
   "name": "ChangeCase",
   "description": "Change Case (ChangeCase) - kleines Tool um die Groß-/Kleinschreibung (lowercase / uppercase) von Text zu ändern.",
   "permissions": [ "tabs", "http://*/*", "https://*/*", "contextMenus" ],
   "version": "0.1.1",

   "icons": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "64": "64.png",
      "128": "128.png"
   },

   "background": {
      "page": "background.html"
   },

   "commands": {
      "uppercase": {
         "description": "Uppercase",
         "suggested_key": {
            "default": "Ctrl+Shift+U",
            "mac": "Command+Shift+U"
         }
      },
      "lowercase": {
         "description": "Lowercase",
         "suggested_key": {
            "default": "Ctrl+Shift+L",
            "mac": "Command+Shift+L"
         }
      },
      "convertcase": {
         "description": "Convert case",
         "suggested_key": {
            "default": "Ctrl+Shift+Z",
            "mac": "Command+Shift+Z"
         }
      }
   },

   "content_scripts": [ {
      "all_frames": true,
      "js": [ "content.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
   } ]
}
